@model Library_Final_Project.DTOs.CreateOrderViewModel
@{
    Layout = null;
}
<!doctype html>
<html lang="ru" prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
