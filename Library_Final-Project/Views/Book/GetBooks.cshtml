@model List<Library_Final_Project.DTOs.Book.BookViewModel>

@{
    Layout = "_Layout";
}
<div class="card">
    <div class="card-body">
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ImagePath</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Percent</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <th>@book.Title</th>
                        <th> <img src="@book.ImagePath" height="300" /></th>
                        <th>@book.Description</th>
                        <th>@book.Price</th>
                        <th>@book.Percent</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



    <div class="main-getbook" style="background-color: #fff">
        <h1 style="text-align:center; padding: 40px">List of Boooooks</h1>
        <div class="row">
        @foreach (var book in Model)
        {
            <div class="booking-card" style="background-image: url(@book.ImagePath); background-size: auto; background-repeat: no-repeat">
                <div class="book-container">
                    <div class="content">
                        <button class="btn">в корзину</button>
                    </div>
                </div>
                <div class="informations-container">
                    <h2 class="title">@book.Title</h2>
                    <p class="sub-title">@book.Title</p>
                    <p class="price">
                        <svg class="icon" style="width:24px;height:24px" viewBox="0 0 24 24">
                            <path fill="currentColor" d="M3,6H21V18H3V6M12,9A3,3 0 0,1 15,12A3,3 0 0,1 12,15A3,3 0 0,1 9,12A3,3 0 0,1 12,9M7,8A2,2 0 0,1 5,10V14A2,2 0 0,1 7,16H17A2,2 0 0,1 19,14V10A2,2 0 0,1 17,8H7Z" />
                        </svg>@book.Price
                    </p>
                    <div class="more-information">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                        </svg>
                        <p class="disclaimer">@book.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>