@model List<Library_Final_Project.DTOs.AuthorViewModel>
@{ 
    Layout = "_AdminLayout";
}

<h2 class="text-center mt-5">Список авторов</h2>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover table-striped table-bordered">
                    <thead>
                        <tr>
                            <th  style="font-size: 18px;">Id</th>
                            <th  style="font-size: 18px;">Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var author in Model)
                        {
                            <tr>
                                <td  style="font-size: 18px;">@author.Id</td>
                                <td  style="font-size: 18px;">@author.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
